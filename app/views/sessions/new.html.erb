<div class="body-wrapper">
  <div class="login_form">
  
    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email %> <br>
        <%= text_field_tag :email, params[:email], placeholder: ' tom33@gmail.com', required: true, autofocus: true %>
      </p>
      
      <p>
        <%= label_tag :password %> <br>
        <%= password_field_tag :password, params[:password],  placeholder:'password', required: true %>
      </p>
  
    
      <p>
        <%= submit_tag "Sign In" %>
      </p>
    
    <% end  %>
  </div>
</div>