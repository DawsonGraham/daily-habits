<div class="body-wrapper">
  <% if @user.avatar_file_name %>
    <%= image_tag @user.avatar.url(:medium) %>
  <% end %>
   <h1 class="page-title">Settings</h1>
   <% @questions.each do |question| %>
   <div class="question_edit_box">
      <p class="question-title"><%= question.title %></p>
      <p class="delete"><%= link_to 'Delete', user_question_path(@user, question), method: :delete %></p>
    </div>
   <% end %>

  
    <h3 style="text-align: center; margin-right: 5%">Add a Question</h3>

    <div class="question_form">
    <%= form_for ([@user, @user.questions.build]) do |f| %>
    <p>
      Question Title:
      <%= f.text_field :title %>
    </p>

    <b>Answer Types:</b>
    <p> 
      <%= f.label :rating %>
      <%= f.check_box :integer, {}, true, false  %>

    </p>
  
    <p>
      <%= f.label :completion %>
      <%= f.check_box :boolean, {}, true, false %>
    </p>
  
    <p>
      <%= f.label :summary %>
      <%= f.check_box :text, {}, true, false %>
    </p>
  
    <%= f.hidden_field :user_id, value: current_user.id %>
  
    <%= f.submit "submit" %>
    <% end %>

  </div>
</div>