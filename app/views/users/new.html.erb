<div class="register_form">

  <%= form_for :user, url: users_path do |f| %>
    <p>
      <%= f.label :first_name %> <br>
      <%= f.text_field :first_name, placeholder: 'first name', required: true,  autofocus: true %>
    </p>
  
    <p>
      <%= f.label :last_name %> <br>
      <%= f.text_field :last_name, placeholder: 'last name', required: true,  autofocus: true %>
    </p>
  
    <p>
      <%= f.label :email %> <br>
      <%= f.text_field :email, placeholder: 'email', required: true, autofocus:   true %>
    </p>
  
    <p>
      <%= f.label :password %> <br>
      <%= f.text_field :password, placeholder: 'password', required: true,  autofocus: true %>
    </p>
  
    <p>
      <%= f.submit "Register" %>
    </p>
  
  <% end  %>
</div>