<div class="register_form">

  <%= form_for :user, url: users_path, html: { multipart: true } do |f| %>
    <p>
      <%= f.label :first_name %> <br>
      <%= f.text_field :first_name, placeholder: 'first name', required: true,  autofocus: true %>
    </p>
  
    <p>
      <%= f.label :last_name %> <br>
      <%= f.text_field :last_name, placeholder: 'last name', required: true,  autofocus: true %>
    </p>
  
    <p>
      <%= f.label :email %> <br>
      <%= f.text_field :email, placeholder: 'email', required: true, autofocus:   true %>
    </p>

    <p>
      <%= f.label :phone_number %> <br>
      <%= f.text_field :phone_number, placeholder: 'phone_number', required: true, autofocus:   true %>
    </p>
  
    <p>
      <%= f.label :password %> <br>
      <%= f.password_field :password, placeholder: 'password', required: true,  autofocus: true %>
    </p>
  
    <%= f.file_field :avatar %>

    <p>
      <%= f.submit "Register" %>
    </p>
  
  <% end  %>

</div>